<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:text="Swipe to refresh list."
        android:id="@+id/tv_refresh_note"
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swp_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/music_controller_bar_layout"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_music_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/music_controller_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">
        <!--android:visibility="gone"-->

        <com.google.android.material.slider.Slider
            android:id="@+id/music_controller_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            android:layout_above="@+id/play_pause_btn_controller"
            app:layout_constraintBottom_toTopOf="@+id/play_pause_btn_controller"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--android:valueFrom="0"
            android:valueTo="100"-->

        <ImageView
            android:id="@+id/play_pause_btn_controller"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/play_pause_btn_controller_shape"
            android:src="@drawable/baseline_play_arrow_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/music_controller_slider" />

        <ImageView
            android:id="@+id/btn_backward_music_controller"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/play_pause_btn_controller"
            android:src="@drawable/baseline_fast_rewind_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/play_pause_btn_controller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/music_controller_slider" />

        <ImageView
            android:id="@+id/btn_forward_music_controller"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/play_pause_btn_controller"
            android:src="@drawable/baseline_fast_forward_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/play_pause_btn_controller"
            app:layout_constraintTop_toBottomOf="@+id/music_controller_slider" />

        <TextView
            android:id="@+id/tv_show_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="00:00"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_backward_music_controller"
            app:layout_constraintTop_toBottomOf="@+id/music_controller_slider" />

        <TextView
            android:id="@+id/tv_duration_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="00:00"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/btn_forward_music_controller"
            app:layout_constraintTop_toBottomOf="@+id/music_controller_slider" />

        <TextView
            android:id="@+id/tv_current_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="4dp"
            tools:text="Title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>